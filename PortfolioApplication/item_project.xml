<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/my_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/image_view_project_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/text_view_project_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/image_view_project_img"
            android:fontFamily="sans-serif-black"
            android:text="Some text Here"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view_project_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_project_title"
            android:layout_toEndOf="@id/image_view_project_img"
            android:fontFamily="sans-serif-light"
            android:text="Some text Here"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>