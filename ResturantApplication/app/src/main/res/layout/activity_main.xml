<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="14dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resturant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resturant_name"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/main_img"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_below="@id/resturant_name"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/waffle1" />

    <TextView
        android:id="@+id/starters_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_img"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/starter_title"
        android:textSize="24sp"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/mains_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/starters_text"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/main_title"
        android:textSize="24sp"
        android:fontFamily="sans-serif-light"/>
</RelativeLayout>