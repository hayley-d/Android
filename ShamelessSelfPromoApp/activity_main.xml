<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="30dp">

        <EditText
            android:id="@+id/edit_text_contact_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:hint="@string/contact_name"
            android:inputType="text" />

        <EditText
            android:id="@+id/edit_text_contact_number"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:hint="@string/contact_number"
            android:inputType="number" />

        <EditText
            android:id="@+id/edit_text_display_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:hint="@string/display_name"
            android:inputType="text" />

        <CheckBox
            android:id="@+id/check_box_junior"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="@string/inc_junior" />

        <Spinner
            android:id="@+id/spinner_job_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            tools:listitem="@android:layout/simple_list_item_1" />

        <CheckBox
            android:id="@+id/check_box_im_start"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="@string/imm_start" />

        <EditText
            android:id="@+id/edit_text_start"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:hint="@string/av_date"
            android:inputType="date" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            style="@style/Widget.AppCompat.Button.Colored"/>


    </LinearLayout>

</ScrollView>
